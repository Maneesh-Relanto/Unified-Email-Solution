# Email Configuration
# Copy this to .env and fill in your credentials

# Gmail (use app password from https://myaccount.google.com/apppasswords)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_PASSWORD=your-16-character-app-password

# Yahoo Mail
YAHOO_EMAIL=your-email@yahoo.com
YAHOO_PASSWORD=your-yahoo-password

# Outlook.com / Office365
OUTLOOK_EMAIL=your-email@outlook.com
OUTLOOK_PASSWORD=your-outlook-password

# Rediff Mail
REDIFF_EMAIL=your-email@rediff.com
REDIFF_PASSWORD=your-rediff-password

# Server Configuration
PING_MESSAGE=pong

# Development/Production
NODE_ENV=development

# Port
PORT=8080
